easyblock = 'ConfigureMake'

name = 'fribidi'
version = '1.0.1'

homepage = 'https://github.com/fribidi/fribidi'
description = """One of the missing links stopping the penetration of free software in Middle East is the lack of
support for the Arabic and Hebrew alphabets. In order to have proper Arabic and Hebrew support, the bidi algorithm
needs to be implemented. It is our hope that this library will stimulate more free software in the Middle Eastern
countries."""

toolchain = {'name': 'GCCcore', 'version': '6.4.0'}

source_urls = ['https://github.com/fribidi/fribidi/archive/']
sources = ['v%(version)s.tar.gz']
checksums = ['243d88a45e94facfdd06d51a83849a6256b60f9db0b8d491027bea6a8cabef0b']

dependencies = [
    ('GLib', '2.54.3'),
]

builddependencies = [
    ('binutils', '2.28'),
    ('pkg-config', '0.29.2'),
]

preconfigopts = "./bootstrap && "

# next version supports --disable docs
# configopts = " --disable-docs"

# fribidi does not support -j flages
parallel = 1

moduleclass = 'lib'

